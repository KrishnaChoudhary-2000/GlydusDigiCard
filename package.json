{
    "name": "glydus-digital-card-monorepo",
    "version": "1.0.0",
    "description": "Full-stack digital business card application",
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:client": "cd client && npm run dev",
        "dev:server": "cd server && npm run dev",
        "build": "npm run build:client && npm run build:server",
        "build:client": "cd client && npm run build",
        "build:server": "cd server && npm run build",
        "start": "cd server && npm start",
        "install:all": "npm install && cd client && npm install && cd ../server && npm install",
        "clean": "rm -rf node_modules client/node_modules server/node_modules client/dist server/dist",
        "lint": "npm run lint:client && npm run lint:server",
        "lint:client": "cd client && npm run lint",
        "lint:server": "cd server && npm run lint"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "keywords": [
        "digital-card",
        "business-card",
        "react",
        "express",
        "mongodb",
        "vercel",
        "full-stack"
    ],
    "author": "Glydus Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/your-username/GlydusDigiCard.git"
    },
    "bugs": {
        "url": "https://github.com/your-username/GlydusDigiCard/issues"
    },
    "homepage": "https://github.com/your-username/GlydusDigiCard#readme"
}